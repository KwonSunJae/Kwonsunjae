<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context="com.kyeongbuk.mongie.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/menucheck"
        android:id="@+id/fragment">

    </FrameLayout>
   <RelativeLayout
       android:layout_above="@id/menu"
       android:layout_width="match_parent"
       android:layout_height="5dp"
       android:id="@+id/menucheck"
       android:background="@color/colorPrimaryDark"
       android:orientation="horizontal">
       <LinearLayout
           android:layout_width="70dp"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:id="@+id/n1"
           android:layout_toLeftOf="@+id/n3"
           android:layout_marginRight="70dp"></LinearLayout>
       <LinearLayout
           android:layout_width="70dp"
           android:layout_height="match_parent"
           android:id="@+id/n2"
           android:orientation="horizontal"
           android:layout_toLeftOf="@+id/n3"></LinearLayout>
       <LinearLayout

           android:orientation="horizontal"
           android:layout_width="70dp"
           android:layout_height="match_parent"
           android:id="@+id/n3"
           android:layout_centerInParent="true"></LinearLayout>
       <LinearLayout
           android:layout_width="70dp"
           android:layout_height="match_parent"
           android:id="@+id/n4"
           android:orientation="horizontal"
           android:layout_toRightOf="@+id/n3"></LinearLayout>
       <LinearLayout
           android:layout_width="70dp"
           android:layout_height="match_parent"
           android:id="@+id/n5"
           android:orientation="horizontal"
           android:layout_toRightOf="@+id/n3"
           android:layout_marginLeft="70dp"></LinearLayout>

   </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:id="@+id/menu">

        <Button
            android:layout_toLeftOf="@+id/HomeButton"
            android:id="@+id/NoticeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="5dp"
            android:layout_marginRight="95dp"

            android:background="@drawable/ic_notifications_black_24dp" />

        <Button
            android:layout_toLeftOf="@id/HomeButton"
            android:id="@+id/AlertButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/ic_assignment_black_24dp" />
        <Button
            android:layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/HomeButton"
            android:layout_marginVertical="5dp"
            android:background="@drawable/ic_home_black_24dp"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/MapButton"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/HomeButton"
            android:layout_marginVertical="5dp"
            android:background="@drawable/ic_location_on_black_24dp"/>

        <Button
            android:id="@+id/SchoolButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="95dp"
            android:layout_marginVertical="5dp"
            android:layout_toRightOf="@id/HomeButton"
            android:background="@drawable/ic_restaurant_menu_black_24dp" />


    </RelativeLayout>


</RelativeLayout>
