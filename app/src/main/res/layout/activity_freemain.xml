<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kyeongbuk.mongie.FreemainActivity"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        >
        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:text="경북고등학교"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정보안내프로그램"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="2"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"

            >

            <TableRow>
                <Button
                    android:layout_marginVertical="10dp"
                    android:layout_width="130dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/colorAccent"
                    android:text="교내지도"
                    android:background="#00ff0000"
                    android:gravity="center"
                    android:id="@+id/fmapButton"

                    />
                <Button
                    android:layout_width="130dp"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/color1"
                    android:text="공지사항"
                    android:background="#00ff0000"
                    android:gravity="center"
                    android:id="@+id/fnoticeButton"
                    android:layout_marginVertical="10dp"

                    />
            </TableRow>
            <TableRow>
                <Button
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/color1"
                    android:text="학교급식"
                    android:background="#00ff0000"
                    android:gravity="center"
                    android:id="@+id/ffoodButton"
                    android:layout_marginVertical="10dp"
                    />
                <Button
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/color1"
                    android:text="가정통신문"
                    android:background="#00ff0000"
                    android:gravity="center"
                    android:id="@+id/falertButton"
                    android:layout_marginVertical="10dp"/>
            </TableRow>
            <TableRow>
                <Button
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/color1"
                    android:text="회원정보"
                    android:background="#00ff0000"
                    android:gravity="center"
                    android:id="@+id/finfoButton"
                    android:layout_marginVertical="10dp"
                    />
                <Button
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/color1"
                    android:text="어플정보"
                    android:background="#00ff0000"
                    android:gravity="center"
                    android:id="@+id/fappButton"
                    android:layout_marginVertical="10dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
